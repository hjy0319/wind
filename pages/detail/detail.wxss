.container {
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #f5f5f5;
  overflow-x: hidden;
  padding: 100rpx 0;
}

.tag {
  flex-direction: row;
  justify-content: flex-start;
  display: flex;
  align-items: center;
  width: 90%;
  padding: 75rpx 0;
}

.form {
  padding: 0 30rpx;
  border-top: 1px solid #e4e4e4;
  font-size: 14px;
  width: 90%;
}

.ipt-wrap {
  min-height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
}

.ipt-wrap label {
  min-width: 120rpx;
}

.row {
  min-height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e4e4e4;
  align-items: center;
  display: flex;
  justify-content: space-between;
}

.text {
  display: flex;
  width: 206rpx;
  justify-content: center;
}

.color-gray {
  color: #635f5f;
}

.color-red {
  color: red;
}

.color-green {
  color: green;
}

.color-gold {
  color: #ffbb00;
}
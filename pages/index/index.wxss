.header {
  position: fixed;
  top: 0rpx;
  width: 750rpx;
  height: 300rpx;
  flex-wrap: nowrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location {
  height: 80rpx;
  font-size: 45rpx;
  font-weight: 700;
  margin-left: 10px;
  color: #696969;
}

.temperature {
  height: 100%;
  font-size: 120rpx;
  font-weight: 900;
  margin-left: 20px;
  
}
.weather{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 150px;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 99999;
  opacity: 0;
  transition: opacity 400ms ease-in;
  pointer-events: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal .dialog {
  width: 84%;
  height: 88%;
  background-color: #eceff4;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dialog .modal-title {
  height: 90.3%;
  width: 100%;
  font-size: 45rpx;
  font-weight: 900;
  color: #0000CD;
}

.dialog .modal-item {
  height: 75.3%;
  width: 100%;
  border-top: 2px solid #E5E7ED;
  font-size: 30rpx;
  color: #4169E1;
}

.modal-button {
  height: 400rpx;
  margin-bottom: 5;
  border-top: 5px solid #E5E7ED;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.modal-button view {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}